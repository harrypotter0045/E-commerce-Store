<div class="invoice-box">
        <table cellpadding="0" cellspacing="0">
            <tr class="top">
                <td colspan="2">
                    <table>
                        <tr>
                            <td class="title">
                                <img src="https://www.sparksuite.com/images/logo.png" style="width:100%; max-width:300px;">
                            </td>

                            <td>
                                Order #: <%= @order.id%><br>
                                Created: <%= @order.created_at%><br>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>

            <tr class="information">
                <td colspan="2">
                    <table>
                        <tr>
                            <td>
                                <%= @province.name%><br>
                            </td>

                            <td>
                                <%= @current_cus.name %><br>
                                <%= @current_cus.email%>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>

            <tr class="heading">
                <td>
                    Item
                </td>

                <td>
                    Price
                </td>
            </tr>

            <%= @products.each do |product|%>

            <tr class="item">
                <td>
                    <%= product.name%>
                </td>

                <td>
                    <% number_to_currency(product.price) %>
                </td>
            </tr>

            <%end%>

            <tr class="total">
                <td></td>

                <td>
                   GST: <%= number_to_currency(@order.gst)%><br>
                   PST: <%= number_to_currency(@order.pst)%><br>
                   Total: <%= number_to_currency(@order.total_price)%>
                </td>
            </tr>
        </table>
    </div>